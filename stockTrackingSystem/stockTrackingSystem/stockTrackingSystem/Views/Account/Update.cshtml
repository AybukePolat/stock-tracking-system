@model stockTrackingSystem.Models.UserInfo
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br />
        <div class="form-group">
            <label>Name: </label>
            <input type="text" name="Name" value="@Model.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label>Last Name: </label>
            <input type="text" name="LastName" value="@Model.LastName" class="form-control" />
        </div>

        <div class="form-group">
            <label>eMail: </label>
            <input type="text" name="eMail" value="@Model.eMail" class="form-control" />
        </div>

        <div class="form-group">
            <label>UserName: </label>
            <input type="text" name="UserName" value="@Model.UserName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Password: </label>
            <input type="text" name="Password" value="@Model.Password" class="form-control" />
        </div>

        <div class="form-group">
            <label>Password Again: </label>
            <input type="text" name="PasswordAgain" value="@Model.PasswordAgain" class="form-control" />
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

</form>